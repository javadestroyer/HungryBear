        android:textColor="@color/Black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/doener"
        app:layout_constraintRight_toRightOf="@id/doener"
        app:layout_constraintLeft_toLeftOf="@id/doener" />

    <TextView
        android:id="@+id/tsalat"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Salat"
        android:textColor="@color/Black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/salad"
        app:layout_constraintRight_toRightOf="@id/salad"
        app:layout_constraintLeft_toLeftOf="@id/salad" />

    <TextView
        android:id="@+id/tsteak"
        android:layout_width="50dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Steak"
        android:textColor="@color/Black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/steak"
