        android:id="@+id/allMenus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/speisekarteanzeigenbutton"
        android:text="Alle Restaurants"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ImageButton
        android:id="@+id/Bn_Admin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_manage" />

    <TextView
        android:id="@+id/tburger"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Burger"
        android:textColor="@color/Black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/burger"
        app:layout_constraintRight_toRightOf="@id/burger"
        app:layout_constraintLeft_toLeftOf="@id/burger"/>

    <TextView
        android:id="@+id/tpizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Pizza"
        android:textColor="@color/Black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/pizza"
        app:layout_constraintRight_toRightOf="@id/pizza"
        app:layout_constraintLeft_toLeftOf="@id/pizza" />

